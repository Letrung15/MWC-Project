<div class="content-topbar flex-sb-m h-full w-100" style="background-color: white;">
    <div class="left-top-bar">
    </div>

    @{
        var session = (Common.UserLogin)Session[Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <div class="right-top-bar flex-w h-full" style="color: black;">
            <a href="/dang-ky" class="flex-c-m trans-04 p-lr-25" style="color: black;">
                Đăng ký
            </a>

            <a href="/dang-nhap" class="flex-c-m trans-04 p-lr-25" style="color: black;">
                Đăng nhập
            </a>
        </div>
    }
    else
    {
        <div class="right-top-bar flex-w h-full" style="color: black;">
            <a href="" class="flex-c-m trans-04 p-lr-25" style="color: black;">
                Xin chào: @session.Name
            </a>

            <a href="/dang-xuat" class="flex-c-m trans-04 p-lr-25" style="color: black;">
                Đăng xuất
            </a>
        </div>
    }
</div>
